<!DOCTYPE html>
<html>
  <head>
    <title>Registration</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link href="./css/style.css" rel="stylesheet" type="text/css" />
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"> -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- IMAGE CONTAINER BEGIN -->
        <div
          class="col-lg-6 col-md-6 d-none d-md-block infinity-image-container" id="register"
        ></div>
        <!-- IMAGE CONTAINER END -->

        <!-- FORM CONTAINER BEGIN -->
        <div class="col-lg-6 col-md-6 infinity-form-container">
          <div class="col-lg-9 col-md-12 col-sm-8 col-xs-12 infinity-form">
            <!-- Company Logo -->
            <div class="text-center mb-3 mt-5">
              <img src="https://itmuniversity.ac.in/wp-content/uploads/2016/04/logo2rat.png" width="150px" />
            </div>
            <div class="text-center mb-4">
              <h4 class="text-info">Create an account</h4>
             
            </div>
            <% if(message.length >0 ) { %>
                <div class="alert alert-danger">
                  <%= message %>
                </div>
           <% } %>
            <!-- Form -->
            <form action="/createUser" method="post" class="px-3" enctype="multipart/form-data">
              <!-- Input Box -->
              <div class="form-input">
                <span><i class="fa fa-user-o"></i></span>
                <input
                  type="text"
                  name="name"
                  autocomplete="off"
                  placeholder="Full Name"
                  tabindex="10"
                  required
                />
              </div>
              <div class="form-input">
                <span><i class="fa fa-envelope-o"></i></span>
                <input
                  type="email"
                  name="email"
                  autocomplete="off"
                  placeholder="Email Address"
                  tabindex="10"
                  required
                />
              </div>
              <div class="form-input">
                <span><i class="fa fa-lock"></i></span>
                <input
                  type="password"
                  name="password"
                  autocomplete="off"
                  placeholder="Password"
                  required
                />
              </div>
              <div class="form-input">
                <span><i class="fa fa-lock"></i></span>
                <input
                  type="password"
                  name="confirm_password"
                  autocomplete="off"
                  placeholder="confirm_password"
                  required
              
                />
              </div>
              <div class="form-input">
                <span><i class="fa fa-lock"></i></span>
                <input
                  type="file"
                  name="image"
                  autocomplete="off"
                  placeholder="image"
                  required
                />
              </div>
      
              <!-- Register Button -->
              <div class="mb-2">
                <button type="submit" class="btn btn-block">Register</button>
              </div>
              <div class="text-center mb-3">
                <div class="text-center mb-3 text-white">or register with</div>
                <!-- Facebook Button -->
                <a href="" class="btn btn-social btn-facebook">facebook</a>

                <!-- Google Button -->
                <a href="" class="btn btn-social btn-google">google</a>

                <!-- Twitter Button -->
                <a href="" class="btn btn-social btn-twitter">twitter</a>
              </div>
              <div class="text-center mb-5 text-white">
                Already have an account?
                <a class="login-link" href="/">Login here</a>
              </div>
            </form>
          </div>
        </div>
        <!-- FORM CONTAINER END -->
      </div>
    </div>
  </body>
</html>
